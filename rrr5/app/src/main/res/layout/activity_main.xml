<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <!-- GLOBAL FRAME -->
    <LinearLayout
        android:id="@+id/global_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">


        <!-- BOARD -->
        <LinearLayout
            android:id="@+id/frame_board"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:fitsSystemWindows="true"
            android:orientation="horizontal">

            <!-- BOARD_side -->
            <LinearLayout
                android:id="@+id/frame_board_side"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="3dp"
                android:weightSum="100">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="250sp"
                    android:layout_weight="30"
                    android:text="M\ne\nn\nu"
                    tools:ignore="NestedWeights" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="70"
                    android:src="@drawable/discard" />

            </LinearLayout>

            <!-- BOARD_arena -->
            <LinearLayout
                android:id="@+id/frame_board_arena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="3dp"
                android:weightSum="99">

                <LinearLayout
                    android:id="@+id/frame_board_arena_topline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal"
                    android:weightSum="99">

                    <ImageView
                        android:id="@+id/b0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/b1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/b2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frame_board_arena_centerline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="33"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/b3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/b4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/b5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frame_board_arena_botline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="3dp"
                    android:paddingHorizontal="20dp"
                    android:layout_weight="33"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/b6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/b7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/b8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <!-- HAND -->
        <LinearLayout
            android:id="@+id/frame_hand"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="50"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:weightSum="3">

            <!-- HAND_neutrals -->
            <LinearLayout
                android:id="@+id/hand_neutral"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/n0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty" />

                <ImageView
                    android:id="@+id/n1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty" />

                <ImageView
                    android:id="@+id/n2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty" />

                <ImageView
                    android:id="@+id/n3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty" />

                <ImageView
                    android:id="@+id/n4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/empty" />
            </LinearLayout>

            <!-- HAND PLAYER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingVertical="5dp"

                android:weightSum="2">

                <!-- Hand player topline -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/h0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/h1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/h2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/h3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/h4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />
                </LinearLayout>

                <!-- Hand player botline -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/h5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/h6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <ImageView
                        android:id="@+id/h7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/empty" />

                    <LinearLayout
                        android:layout_height="100dp"
                        android:layout_width="0dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="2"
                        android:padding="5dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="NEXT"
                        tools:ignore="NestedWeights" />



                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>