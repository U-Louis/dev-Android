<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    >

    <!-- GLOBAL FRAME -->
    <LinearLayout
        android:id="@+id/global_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        >

        <!-- BOARD -->
        <LinearLayout
            android:id="@+id/frame_board"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:fitsSystemWindows="true"
            android:orientation="horizontal"
            >

            <!-- BOARD_side -->
            <LinearLayout
                android:id="@+id/frame_board_side"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="100"
                >
                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="30"
                    tools:ignore="NestedWeights"
                    android:text="Menu"
                    >
                </Button>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="70"
                    android:layout_gravity="bottom">

                    <ImageView
                        android:padding="10dp"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/discard"
                        />

                </LinearLayout>

            </LinearLayout>

            <!-- BOARD_arena -->
            <LinearLayout
                android:id="@+id/frame_board_arena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:weightSum="99"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/frame_board_arena_topline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:weightSum="99"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />
                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />
                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/frame_board_arena_centerline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />
                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />
                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/frame_board_arena_botline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />
                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />
                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="33"
                        app:srcCompat="@drawable/empty" />
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>


        <!-- HAND -->
        <LinearLayout
            android:id="@+id/frame_hand"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_weight="50"
            android:weightSum="99"
            >

            <!-- HAND_neutrals -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="33"
                />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="2dp"
                android:layout_height="122dp"
                android:layout_weight="33"
                app:srcCompat="@drawable/empty" />
                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    app:srcCompat="@drawable/empty" />
                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    app:srcCompat="@drawable/empty" />

        </LinearLayout>
            <!-- HAND -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="66"
                />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>