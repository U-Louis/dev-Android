<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/greenyellow</item>
        <item name="fontFamily">@font/arizonia</item>
        <item name="android:ems">15</item>
    </style>

    <style name="Afpa">
        <item name="android:background">@drawable/fond_afpa</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">#0023A0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="Afpa_land" parent="Afpa">
        <item name="android:background">@drawable/fond_afpa_land</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>